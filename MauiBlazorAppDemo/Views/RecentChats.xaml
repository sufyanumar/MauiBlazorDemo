<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBlazorAppDemo.Views.RecentChats"
             xmlns:controls="clr-namespace:MauiBlazorAppDemo.Views.CustomControls"
             Title="RecentChats"
             BackgroundColor="White">
    <StackLayout>
        <ListView x:Name="ItemsListView" RowHeight="100">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <controls:ChatListItem/>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>